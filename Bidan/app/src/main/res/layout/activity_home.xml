    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Master Data"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="400dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#D5D5D5"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btndaftarpasien"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/color_button_green"
                    android:text="Pasien Baru"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnKeluhan"
                        android:layout_width="170dp"
                        android:layout_height="210dp"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/inputkeluhan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="160dp"
                            android:gravity="center"
                            android:text="Input Data"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="180dp"
                            android:gravity="center"
                            android:text="Keluhan"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnjanin"
                        android:layout_width="170dp"
                        android:layout_height="210dp"
                        android:layout_marginLeft="7dp"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/inputjanin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="160dp"
                            android:gravity="center"
                            android:text="Input Data"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="180dp"
                            android:gravity="center"
                            android:text="Perkembangan Janin"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Data Laporan"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="400dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#D5D5D5"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnList"
                        android:layout_width="170dp"
                        android:layout_height="210dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/hasilperiksa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="170dp"
                            android:text="Hasil Pemeriksaan"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="normal" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btndataIbuhamil"
                        android:layout_width="170dp"
                        android:layout_height="210dp"
                        android:layout_marginLeft="5dp"
                        android:padding="2dp"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/listibu" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="170dp"
                            android:gravity="center"
                            android:text="Data Pasien"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="normal" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>