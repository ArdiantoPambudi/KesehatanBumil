<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahPemeriksaanActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

       <TextView
        android:layout_width="wrap_content"
        android:text="id"
        android:textColor="#fff"
        android:id="@+id/idmomss"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Tanggal Periksa"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ettglperiksa"
                android:layout_width="240dp"
                android:padding="4dp"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:textColor="#249CEC"

                />
            <ImageView
                android:padding="2dp"
                android:id="@+id/kalender"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_calendar"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Berat Badan / Kg"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etBeratBadan"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Tekanan Darah"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etTekanandarah"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Tinggi Fundus Uteri / cm"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etTinggifundus"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Denyut Jantung Janin Kali/Menit"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etdenyutjantungjanin"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Lingkar Lengan Atas / cm"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etLila"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Keluhan"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etKeluhan"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="10dp"
            android:text="Kondisi"
            android:textColor="#8B8080"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etKondisi"
                android:layout_width="270dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#249CEC"

                />


        </LinearLayout>
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/color_button_pink"
            android:text="SIMPAN"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>