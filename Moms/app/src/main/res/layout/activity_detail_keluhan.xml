<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailBayiMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetailkeluhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Minggu"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints">

        </TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagedetailkeluhan"
            android:layout_width="150dp"
            android:elevation="2dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyebab :"
            android:padding="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tvDetailkeluhanPenyebab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:gravity="fill"
            android:padding="5dp"
            android:text="Perkembangan ini sangat baik"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara Mengatasi :"
            android:padding="5dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tvDetailKeluhanpengobatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="fill"
            android:textSize="15dp"
            android:justificationMode="inter_word"
            android:padding="5dp"
            android:text="Perkembangan ini sangat baik"
            tools:ignore="MissingConstraints">

        </TextView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>